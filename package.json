{
  "name": "excollect-client",
  "version": "1.0.3",
  "type": "module",
  "description": "ExCollect API Client",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./dist/excollect-client/utils": {
      "types": "./dist/excollect-client/utils.d.ts",
      "default": "./dist/excollect-client/utils.js"
    },
    "./utils": {
      "types": "./dist/excollect-client/utils.d.ts",
      "default": "./dist/excollect-client/utils.js"
    },
    "./crypt": {
      "types": "./dist/excollect-client/crypt.d.ts",
      "default": "./dist/excollect-client/crypt.js"
    },
    "./logger": {
      "types": "./dist/excollect-client/logger.d.ts",
      "default": "./dist/excollect-client/logger.js"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "axios-mock-adapter": "^2.1.0",
    "chai": "^5.2.0",
    "eslint": "^9.28.0",
    "mocha": "^11.7.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "@apeleghq/rfc8188": "^1.0.9",
    "axios": "^1.13.2",
    "axios-retry": "^4.5.0",
    "base64url": "^3.0.1",
    "buffer": "^6.0.3",
    "dayjs": "^1.11.13",
    "http_ece": "^1.2.1",
    "js-sha256": "^0.11.1",
    "nonce": "^1.0.4",
    "uint8array-extras": "^1.4.0"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "npm run clean && npx tsc",
    "clean": "rm -rf tsconfig.tsbuildinfo dist/*",
    "test": "npm run build && NODE_OPTIONS=--disable-warning=ExperimentalWarning mocha --reporter spec --verbose --",
    "lint": "npx eslint src/",
    "prepublishOnly": "npm run test"
  }
}
