{
  "compilerOptions": {

    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* If transpiling with TypeScript: */
    "module": "NodeNext",
    "rootDir" : "./src",
    "outDir": "./dist",
    "sourceMap": true,

    /* AND if you're building for a library: */
    "declaration": true,

    /* If your code runs in the DOM: */
    "lib": ["es2022", "dom", "dom.iterable"],

  },
  "files": [
    "./src/.d.ts",
    "./src/index.ts",
    "./src/excollect-client.ts",
    "./src/excollect-client/logger.ts",
    "./src/excollect-client/utils.ts",
    "./src/excollect-client/crypt.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
